<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="24.0" styleClass="container" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.RegisterCourseController">
   <children>
      <!-- Header Section -->
      <VBox alignment="CENTER" spacing="8.0" styleClass="card-header">
         <children>
            <Label styleClass="title" text="Course Registration">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Label styleClass="body-text" text="Select and register for available courses" />
         </children>
      </VBox>
      
      <!-- Filter Section -->
      <HBox alignment="CENTER_LEFT" spacing="16.0" styleClass="card">
         <children>
            <Label styleClass="input-label" text="Filter by Program:" />
            <ComboBox fx:id="programFilter" styleClass="combo-box" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="selectedCoursesLabel" styleClass="help-text" text="Selected Courses: 0" />
         </children>
         <padding>
            <Insets bottom="16.0" left="24.0" right="24.0" top="16.0" />
         </padding>
      </HBox>
      
      <!-- Available Courses -->
      <VBox spacing="16.0" styleClass="card">
         <children>
            <Label styleClass="section-title" text="Available Courses">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            
            <ScrollPane fitToWidth="true" prefHeight="300.0" styleClass="scroll-pane">
               <content>
                  <VBox fx:id="coursesContainer" spacing="12.0">
                     <padding>
                        <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>
         </children>
         <padding>
            <Insets bottom="24.0" left="24.0" right="24.0" top="24.0" />
         </padding>
      </VBox>
      
      <!-- Action Buttons -->
      <HBox alignment="CENTER" spacing="16.0">
         <children>
            <Button onAction="#handleRegister" styleClass="btn, btn-success" text="Register Selected Courses" />
            <Button onAction="#handleBackToDashboard" styleClass="btn, btn-secondary" text="Back to Dashboard" />
         </children>
      </HBox>
   </children>
</VBox>
