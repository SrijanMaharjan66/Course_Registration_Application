<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.DashboardController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="16.0" style="-fx-background-color: linear-gradient(135deg, rgba(178, 176, 232, 0.9) 0%, rgba(122, 133, 193, 0.9) 100%); -fx-padding: 24px 32px; -fx-effect: dropshadow(gaussian, rgba(26,42,128,0.25), 12, 0, 0, 4); -fx-background-radius: 0 0 20px 20px;">
         <children>
            <VBox spacing="4.0">
               <children>
                  <Label fx:id="welcomeLabel" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1A2A80; -fx-effect: dropshadow(gaussian, rgba(255,255,255,0.8), 2, 0, 0, 1), dropshadow(gaussian, rgba(26,42,128,0.4), 4, 0, 0, 2);" text="Welcome, Student!">
                     <font>
                        <Font name="System Bold" size="28.0" />
                     </font>
                  </Label>
                  <Label fx:id="registeredCoursesCountLabel" style="-fx-font-size: 14px; -fx-text-fill: #1A2A80; -fx-font-weight: 500; -fx-effect: dropshadow(gaussian, rgba(255,255,255,0.6), 1, 0, 0, 1);" text="Registered Courses: 0" />
               </children>
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <VBox alignment="CENTER_RIGHT" spacing="4.0">
               <children>
                  <Label style="-fx-font-size: 13px; -fx-text-fill: #1A2A80; -fx-font-weight: 500; -fx-effect: dropshadow(gaussian, rgba(255,255,255,0.6), 1, 0, 0, 1);" text="Academic Year 2024-25" />
                  <Label style="-fx-font-size: 12px; -fx-text-fill: #1A2A80; -fx-font-style: italic; -fx-effect: dropshadow(gaussian, rgba(255,255,255,0.4), 1, 0, 0, 1);" text="Semester System" />
               </children>
            </VBox>
         </children>
      </HBox>
   </top>
   
   <center>
      <VBox alignment="CENTER" spacing="40.0" style="-fx-padding: 40px;">
         <children>
            <Label style="-fx-font-size: 20px; -fx-font-weight: 600; -fx-text-fill: #1A2A80; -fx-effect: dropshadow(gaussian, rgba(255,255,255,0.8), 2, 0, 0, 1);" text="Quick Actions" />
            
            <!-- Main Action Cards -->
            <GridPane alignment="CENTER" hgap="32.0" vgap="32.0">
               <children>
                  <!-- Student Profile Card -->
                  <VBox alignment="CENTER" onMouseClicked="#handleProfile" spacing="16.0" style="-fx-background-color: linear-gradient(135deg, rgba(255, 255, 255, 0.92) 0%, rgba(248, 249, 255, 0.92) 100%); -fx-background-radius: 20px; -fx-padding: 32px 24px; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(26,42,128,0.15), 20, 0, 0, 8); -fx-border-color: rgba(178, 176, 232, 0.7); -fx-border-width: 2px; -fx-border-radius: 20px; -fx-min-width: 240px; -fx-min-height: 180px;" GridPane.columnIndex="0" GridPane.rowIndex="0">
                     <children>
                        <Label style="-fx-font-size: 32px;" text="ðŸ‘¤" />
                        <Label style="-fx-font-size: 18px; -fx-font-weight: 600; -fx-text-fill: #1A2A80; -fx-effect: dropshadow(gaussian, rgba(255,255,255,0.8), 1, 0, 0, 1);" text="Student Profile" />
                        <Label style="-fx-font-size: 13px; -fx-text-fill: #3B38A0; -fx-text-alignment: center; -fx-effect: dropshadow(gaussian, rgba(255,255,255,0.4), 1, 0, 0, 1);" text="View and edit your personal information" wrapText="true" />
                     </children>
                  </VBox>
                  
                  <!-- Register Courses Card -->
                  <VBox alignment="CENTER" onMouseClicked="#handleRegisterCourse" spacing="16.0" style="-fx-background-color: linear-gradient(135deg, rgba(255, 255, 255, 0.92) 0%, rgba(248, 249, 255, 0.92) 100%); -fx-background-radius: 20px; -fx-padding: 32px 24px; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(26,42,128,0.15), 20, 0, 0, 8); -fx-border-color: rgba(178, 176, 232, 0.7); -fx-border-width: 2px; -fx-border-radius: 20px; -fx-min-width: 240px; -fx-min-height: 180px;" GridPane.columnIndex="1" GridPane.rowIndex="0">
                     <children>
                        <Label style="-fx-font-size: 32px;" text="ðŸ“š" />
                        <Label style="-fx-font-size: 18px; -fx-font-weight: 600; -fx-text-fill: #1A2A80; -fx-effect: dropshadow(gaussian, rgba(255,255,255,0.8), 1, 0, 0, 1);" text="Register Courses" />
                        <Label style="-fx-font-size: 13px; -fx-text-fill: #3B38A0; -fx-text-alignment: center; -fx-effect: dropshadow(gaussian, rgba(255,255,255,0.4), 1, 0, 0, 1);" text="Enroll in available courses" wrapText="true" />
                     </children>
                  </VBox>
                  
                  <!-- My Courses Card -->
                  <VBox alignment="CENTER" onMouseClicked="#handleViewCourses" spacing="16.0" style="-fx-background-color: linear-gradient(135deg, rgba(255, 255, 255, 0.92) 0%, rgba(248, 249, 255, 0.92) 100%); -fx-background-radius: 20px; -fx-padding: 32px 24px; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(26,42,128,0.15), 20, 0, 0, 8); -fx-border-color: rgba(178, 176, 232, 0.7); -fx-border-width: 2px; -fx-border-radius: 20px; -fx-min-width: 240px; -fx-min-height: 180px;" GridPane.columnIndex="0" GridPane.rowIndex="1">
                     <children>
                        <Label style="-fx-font-size: 32px;" text="ðŸ“‹" />
                        <Label style="-fx-font-size: 18px; -fx-font-weight: 600; -fx-text-fill: #1A2A80; -fx-effect: dropshadow(gaussian, rgba(255,255,255,0.8), 1, 0, 0, 1);" text="My Courses" />
                        <Label style="-fx-font-size: 13px; -fx-text-fill: #3B38A0; -fx-text-alignment: center; -fx-effect: dropshadow(gaussian, rgba(255,255,255,0.4), 1, 0, 0, 1);" text="View your registered courses" wrapText="true" />
                     </children>
                  </VBox>
                  
                  <!-- Analytics Card -->
                  <VBox alignment="CENTER" onMouseClicked="#handleViewCharts" spacing="16.0" style="-fx-background-color: linear-gradient(135deg, rgba(255, 255, 255, 0.92) 0%, rgba(248, 249, 255, 0.92) 100%); -fx-background-radius: 20px; -fx-padding: 32px 24px; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(26,42,128,0.15), 20, 0, 0, 8); -fx-border-color: rgba(178, 176, 232, 0.7); -fx-border-width: 2px; -fx-border-radius: 20px; -fx-min-width: 240px; -fx-min-height: 180px;" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <children>
                        <Label style="-fx-font-size: 32px;" text="ðŸ“Š" />
                        <Label style="-fx-font-size: 18px; -fx-font-weight: 600; -fx-text-fill: #1A2A80; -fx-effect: dropshadow(gaussian, rgba(255,255,255,0.8), 1, 0, 0, 1);" text="Analytics" />
                        <Label style="-fx-font-size: 13px; -fx-text-fill: #3B38A0; -fx-text-alignment: center; -fx-effect: dropshadow(gaussian, rgba(255,255,255,0.4), 1, 0, 0, 1);" text="View course statistics and progress" wrapText="true" />
                     </children>
                  </VBox>
               </children>
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="240.0" prefWidth="240.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="240.0" prefWidth="240.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="180.0" prefHeight="180.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="180.0" prefHeight="180.0" vgrow="SOMETIMES" />
               </rowConstraints>
            </GridPane>
         </children>
      </VBox>
   </center>
   
   <bottom>
      <HBox alignment="CENTER" spacing="20.0" style="-fx-padding: 24px;">
         <children>
            <Button onAction="#handleLogout" prefWidth="140.0" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 500; -fx-font-size: 14px; -fx-padding: 12px 24px; -fx-background-radius: 12px; -fx-background-color: linear-gradient(135deg, rgba(178, 176, 232, 0.95) 0%, rgba(122, 133, 193, 0.95) 100%); -fx-text-fill: #1A2A80; -fx-border-color: rgba(122, 133, 193, 0.8); -fx-border-width: 2px; -fx-border-radius: 12px; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(26,42,128,0.3), 10, 0, 0, 5);" text="Sign Out" />
            <Button onAction="#handleExit" prefWidth="140.0" style="-fx-font-family: 'Segoe UI'; -fx-font-weight: 500; -fx-font-size: 14px; -fx-padding: 12px 24px; -fx-background-radius: 12px; -fx-background-color: linear-gradient(135deg, #1A2A80 0%, #3B38A0 100%); -fx-text-fill: white; -fx-border-color: transparent; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(26,42,128,0.3), 10, 0, 0, 5);" text="Exit Application" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
