<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.ProfileController">
   <center>
      <VBox alignment="CENTER" spacing="32.0" styleClass="container">
         <children>
            <!-- Header -->
            <VBox alignment="CENTER" spacing="8.0">
               <children>
                  <Label styleClass="title" text="Student Profile">
                     <font>
                        <Font name="System Bold" size="28.0" />
                     </font>
                  </Label>
                  <Label styleClass="body-text" text="Manage your personal information and academic details" />
               </children>
            </VBox>
            
            <!-- Profile Form -->
            <VBox alignment="CENTER" maxWidth="600.0" spacing="24.0" styleClass="form-container">
               <children>
                  <GridPane hgap="20.0" vgap="16.0">
                     <children>
                        <VBox spacing="8.0" styleClass="input-group" GridPane.columnIndex="0" GridPane.rowIndex="0">
                           <children>
                              <Label styleClass="input-label" text="Full Name" />
                              <TextField fx:id="nameField" promptText="Enter your full name" styleClass="text-field" />
                           </children>
                        </VBox>
                        
                        <VBox spacing="8.0" styleClass="input-group" GridPane.columnIndex="1" GridPane.rowIndex="0">
                           <children>
                              <Label styleClass="input-label" text="Email Address" />
                              <TextField fx:id="emailField" promptText="Enter your email" styleClass="text-field" />
                           </children>
                        </VBox>
                        
                        <VBox spacing="8.0" styleClass="input-group" GridPane.columnIndex="0" GridPane.rowIndex="1">
                           <children>
                              <Label styleClass="input-label" text="Academic Program" />
                              <ComboBox fx:id="programComboBox" promptText="Select your program" styleClass="combo-box" />
                           </children>
                        </VBox>
                        
                        <VBox spacing="8.0" styleClass="input-group" GridPane.columnIndex="1" GridPane.rowIndex="1">
                           <children>
                              <Label styleClass="input-label" text="Current Semester" />
                              <ComboBox fx:id="semesterComboBox" promptText="Select semester" styleClass="combo-box" />
                           </children>
                        </VBox>
                     </children>
                     <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="250.0" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="250.0" />
                     </columnConstraints>
                  </GridPane>
                  
                  <HBox alignment="CENTER" spacing="16.0">
                     <children>
                        <Button onAction="#handleSave" styleClass="btn, btn-success" text="Save Changes" />
                        <Button onAction="#handleBackToDashboard" styleClass="btn, btn-secondary" text="Back to Dashboard" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>
